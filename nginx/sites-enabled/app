server {
    listen 80;
    server_name o-tilt.local *.o-tilt.local o-tilt.com.br *.o-tilt.com.br;

    if ($ENVIRONMENT = production) {
        return 301 https://www.o-tilt.com.br$request_uri;
    }

    include /etc/nginx/includes/app.conf;
}

